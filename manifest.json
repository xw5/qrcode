{
  "manifest_version": 3,
  "name": "QRCodeAssistant",
  "version": "1.0.1",
  "description": "快速二维码生成",
  "icons":
  {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
  }, 
  "action": 
  {
      "default_icon": "img/icon16.png",
      "default_title": "生成二维码",
      "default_popup": "qrcode_popup.html"
  },
  "background": {
    "service_worker": "js/qrcode_background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/qrcode_win.css"],
      "js": ["js/qrcode.min.js","js/qrcode_win.js"]
    }
  ],
  "permissions":
  [
    "contextMenus",
    "notifications",
    "tabs"
  ],
  "host_permissions":[
    "http://*/*",
    "https://*/*"
  ],
  "homepage_url": "https://github.com/xw5/browser_plugin",
  "omnibox": { "keyword" : "qrcode" }
}